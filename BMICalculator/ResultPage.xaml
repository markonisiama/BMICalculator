<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BMICalculator.ResultPage"
             Title="ResultPage">
    <VerticalStackLayout Padding="20" Spacing="20">
        <Label x:Name="BmiValue" FontSize="32" HorizontalOptions="Center"/>
        <Label x:Name="Category" FontAttributes="Bold" HorizontalOptions="Center"/>

        <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
            <Button Text="← Back" Clicked="OnBackClicked"/>
            <Button Text="Recommendations →" Clicked="OnRecsClicked"/>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>